---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Button } from "free-astro-components";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>CHSH Tinkerer</h1>
			<p>quantum part</p>
			<Button label="Button" />

			<h1>CHSH Tinkerer</h1>
			<div>
				<label for="aliceStrategy">Alice Strategy:</label>
				<select id="aliceStrategy" name="aliceStrategy">
					<option value="" disabled selected>Choose an option</option>
					<option value="1">a = 0</option>
					<option value="2">a = 1</option>
					<option value="3">a = x</option>
					<option value="4">a = !x</option>
				</select>

				<br /><br />

				<label for="bobStrategy">Bob Strategy:</label>
				<select id="bobStrategy" name="bobStrategy">
					<option value="" disabled selected>Choose an option</option>
					<option value="1">b = 0</option>
					<option value="2">b = 1</option>
					<option value="3">b = x</option>
					<option value="4">b = !y</option>
				</select>
				<script>
					// Alice dropdown alert
					document
						.getElementById("aliceStrategy")
						.addEventListener("change", function () {
							const selectedText =
								this.options[this.selectedIndex].text;
							alert("Alice selected: " + selectedText);
						});

					// Bob dropdown alert
					document
						.getElementById("bobStrategy")
						.addEventListener("change", function () {
							const selectedText =
								this.options[this.selectedIndex].text;
							alert("Bob selected: " + selectedText);
						});
				</script>

				<button id="hi">click me to test!!!! </button>
				<script>
					document
						.getElementById("hi")
						.addEventListener("click", () => {
							alert(checkCHSHtable(1, 2, 3, 4));
						});

					function checkCHSHtable(x, y, a, b) {
						document.getElementById("hi").textContent =
							"New text from JavaScript!";
						return x + y + a + b;
					}
				</script>
			</div>
			<Footer />
		</main>
	</body>
</html>
